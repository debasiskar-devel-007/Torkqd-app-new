<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
     >


    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:columnWidth="150dp"
        android:drawSelectorOnTop="true"

        android:focusable="true"
        android:gravity="center"

        android:numColumns="auto_fit"
        android:scaleType="fitCenter"


        android:stretchMode="columnWidth"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false"
        />

    <RelativeLayout
        android:id="@+id/imguploadtbar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:gravity="center"
         >


    </RelativeLayout>



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="50dp"

        android:orientation="horizontal"
        android:stretchColumns="*" >

        <TableRow
            android:layout_gravity="center"
            android:gravity="center">




            <Button
                android:id="@+id/imguploadbtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="5dip"
                android:onClick="opencamera"
                android:text="Take A Picture " />

            <Button
                android:id="@+id/imgcancelbtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="5dip"
                android:onClick="openvideo"
                android:text="Take A Video" />
        </TableRow>
    </TableLayout>




</RelativeLayout><!-- From: file:/E:/Android/projects/Torkqd-app-new/app/src/main/res/layout/choose_uploader.xml -->